{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2021",
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "prisma",
    "dist",
    "build",
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ]
}